<script src='/public/js/profile.js'></script>

<main class='is-fullhd fill page-height parallax vegetable-bg flex-col'>
    <div class='tabs is-centered is-boxed is-large profile-tab'>
        <ul>
            <li {{#ifEquals template 'profile'}}class='is-active'{{/ifEquals}}>
                <a href='/profile'>
                    <span class='icon is-small'><i class='fas fa-user' aria-hidden='true'></i></span>
                    <span>Profile</span>
                </a>
            </li>
            <li {{#ifEquals template 'posts'}}class='is-active'{{/ifEquals}}>
                <a href='/posts'>
                    <span class='icon is-small'><i class='fas fa-hamburger' aria-hidden='true'></i></span>
                    <span>My Recipes</span>
                </a>
            </li>
            <li {{#ifEquals template 'likes'}}class='is-active'{{/ifEquals}}>
                <a href='/likes'>
                    <span class='icon is-small'><i class='fas fa-heart' aria-hidden='true'></i></span>
                    <span>Liked Recipes</span>
                </a>
            </li>
            <li {{#ifEquals template 'followers'}}class='is-active'{{/ifEquals}}>
                <a href='/followers'>
                    <span class='icon is-small'><i class='fas fa-users' aria-hidden='true'></i></span>
                    <span>Followers</span>
                </a>
            </li>
            <li {{#ifEquals template 'following'}}class='is-active'{{/ifEquals}}>
                <a href='/following'>
                    <span class='icon is-small'><i class='fas fa-user-plus' aria-hidden='true'></i></span>
                    <span>Following</span>
                </a>
            </li>
        </ul>
    </div>

    {{> (lookup . 'template') }}
</main>
